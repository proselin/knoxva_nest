{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2021"],
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@generate-image/*": ["src/generate-image/*"],
      "@shared/*": ["src/shared/*"],
      "@minio/*": ["src/minio/*"],
      "@generate-child-process/*": ["src/generate-image-child-process/*"],
      "@environments/*": ["src/environment/*"]
    },
  }
}
